<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Hub - Countries</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" type="image/x-icon" href="http://localhost:3000/images/favicon.ico">
</head>
<header class="site-header">
    <div class="header-content">
        <h1 class="site-title">Election Hub</h1>
        <p class="site-description">Your One-Stop Election Information Hub</p>
    </div>
    <!-- Back to Home Button -->
    <div class="back-to-home">
        <a href="/" class="back-home-btn">Back to Home</a>
    </div>
</header>
<body>
    <div class="countries-container">
        <h1>Countries</h1>
        <% countries.forEach(country => { %>
            <div class="country">
                <h2><a href="/countries/<%= country.code %>"><%= country.name %></a></h2>
                <img src="/images/flags/<%= country.code %>flag.png" alt="<%= country.name %> flag" />
            </div>
        <% }) %>
    </div>
</body>
</html>
